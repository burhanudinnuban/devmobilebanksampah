<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ParentRubah"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.UpdateListItem"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="6dp">
            <ImageView
                android:id="@+id/imgUpdateItemPicture"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_camera_16_dp" />
            <TextView
                android:id="@+id/tvJenisItemUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Jenis Item"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/tvIDItemUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" ID Item"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="16dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"/>
            <android.support.design.widget.TextInputEditText
                android:id="@+id/etHargaItemUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Harga Item" />
            </LinearLayout>
            <Button
                android:id="@+id/btnRubahItem"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="  Simpah Perubahan  "
                android:background="@drawable/button_green"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_gravity="center"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>