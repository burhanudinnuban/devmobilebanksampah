<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent1"
    android:background="@color/zxing_transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MemberFragment.RequestMember.DetailRequestMember">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_exit"
            android:id="@+id/arrowBack"
            android:layout_gravity="right"
            android:layout_margin="5dp"></ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgPictureDetailReqMember"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="6dp"
            android:background="@drawable/border_rectangle"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_navigation_profil" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="5dp"
            app:cardCornerRadius="15dp"
            android:layout_margin="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="left|start|center"
                        android:text="Nama" />

                    <TextView
                        android:id="@+id/tvNamaDetailReqMember"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|start|center"
                        android:hint=": (Nama)" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="left|start|center"
                        android:text="ID Member" />

                    <TextView
                        android:id="@+id/tvIdDetailReqMember"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|start|center"
                        android:hint=": (Id Member)" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="left|start|center"
                        android:text="Alamat" />

                    <TextView
                        android:id="@+id/tvAlamatDetailReqMember"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|start|center"
                        android:hint=": (Alamat)" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="left|start|center"
                        android:text="Tanggal Pendaftaran" />

                    <TextView
                        android:id="@+id/tvTanggalBuatDetailReqMember"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|start|center"
                        android:hint=": (Tanggal Create)" />
                </TableRow>
            </LinearLayout>
        </android.support.v7.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btTambahmember"
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/ic_terima_member"
                        android:text="Tambahkan Member"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btTolakMember"
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/ic_tolak_member"
                        android:text="  Tolak Member  "
                        android:textColor="#ffffff"
                        android:textStyle="bold" />

            </LinearLayout>


    </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>