<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_screen"
    tools:context=".MemberFragment.RequestMember.DetailRequestMember">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/imgPictureDetailReqMember"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/border_style"
        android:padding="5dp"
        app:srcCompat="@drawable/ic_navigation_profil" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="15dp"
            app:cardMaxElevation="15dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="15dp">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="left|start|center"
                android:text="Nama" />

            <TextView
                android:id="@+id/tvNamaDetailReqMember"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|start|center"
                android:hint=": (Nama)" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="left|start|center"
                android:text="ID Member" />

            <TextView
                android:id="@+id/tvIdDetailReqMember"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|start|center"
                android:hint=": (Id Member)" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="left|start|center"
                android:text="Alamat" />

            <TextView
                android:id="@+id/tvAlamatDetailReqMember"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|start|center"
                android:hint=": (Alamat)" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="left|start|center"
                android:text="Tanggal Pendaftaran" />

            <TextView
                android:id="@+id/tvTanggalBuatDetailReqMember"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|start|center"
                android:hint=": (Tanggal Create)" />
        </TableRow>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="15dp">
                    <Button
                        android:id="@+id/btTambahmember"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="  Tambahkan Member  "
                        android:background="@drawable/button_green"
                        android:textColor="#ffffff"
                        android:textStyle="bold"/>
                    <Button
                        android:id="@+id/btTolakMember"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="  Tolak Member  "
                        android:background="@drawable/button_red"
                        android:textColor="#ffffff"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</LinearLayout>