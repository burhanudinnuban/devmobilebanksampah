<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent"
    android:background="@drawable/ic_background_authentication">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logo_erecycle_color_general"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"/>
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prosperity Through Waste"
        android:textColor="@color/ColorGeneral"
        android:layout_below="@+id/imgLogo"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:textSize="16dp"
        android:textStyle="bold"/>
    <ImageView
        android:id="@+id/imgBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_page_intro"
        android:layout_below="@+id/tvTitle"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"/>
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/ic_button_rectangle_general"
        android:layout_below="@+id/imgBackground"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/padding_10"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="#fff"
        android:text="LOGIN"/>
    <Button
        android:id="@+id/btnDaftar"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/ic_rectangle_button_line"
        android:text="DAFTAR"
        android:textColor="@color/ColorGeneral"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_below="@+id/btnLogin"
        android:layout_marginTop="@dimen/padding_10"
        android:layout_centerInParent="true"/>


</RelativeLayout>
