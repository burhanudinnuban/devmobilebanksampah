<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Result Scan Member"
                android:gravity="center"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="24dp"
                android:layout_margin="15dp"/>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:gravity="left"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:gravity="center|start"
                    android:layout_weight="0.5"/>
                <TextView
                    android:id="@+id/tvNamaMember"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="(Nama)"
                    android:gravity="end|right|start"
                    android:layout_weight="1"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Bank Sampah"
                    android:gravity="left"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:gravity="center|start"
                    android:layout_weight="0.5"/>
                <TextView
                    android:id="@+id/tvNamaBankSampah"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="(Bank Sampah)"
                    android:gravity="end|right|start"
                    android:layout_weight="1"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:gravity="left"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:gravity="center|start"
                    android:layout_weight="0.5"/>
                <TextView
                    android:id="@+id/tvStatusMember"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="(Status)"
                    android:gravity="end|right|start"
                    android:layout_weight="1"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Id Member"
                    android:gravity="left"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:gravity="center|start"
                    android:layout_weight="0.5"/>
                <TextView
                    android:id="@+id/tvIdMember"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="(Id Member)"
                    android:gravity="end|right|start"
                    android:layout_weight="1"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Point"
                    android:gravity="left"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:gravity="center|start"
                    android:layout_weight="0.5"/>
                <TextView
                    android:id="@+id/tvPoint"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="(Point)"
                    android:gravity="end|right|start"
                    android:layout_weight="1"/>
            </TableRow>
            <Button
                android:id="@+id/btnApprove"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_btn_default"
                android:text="OK"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:layout_margin="10dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>