<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_profile">
        <LinearLayout
            android:background="@color/ColorGeneral"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:orientation="vertical"
            android:gravity="center">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgBankSampah"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@color/colorBorderWhite"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/tvNamaBankSampah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:hint="(Nama Bank Sampah)"
        android:textAllCaps="true"
        android:textColorHint="@color/colorWhite"
        android:textColor="@color/colorWhite"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvAlamatBankSampah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNamaBankSampah"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:hint="(Alamat Bank Sampah)"
        android:textColorHint="@color/colorWhite"
        android:textColor="@color/colorWhite"
        android:textSize="12sp"
        android:layout_marginBottom="20dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:id="@+id/linear_pilihan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cvBarcode" android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:id="@+id/cvPencairanSaldo"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="@dimen/padding_10"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="@dimen/padding_10"
                app:cardCornerRadius="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="#FF9100">

                    <ImageView
                        android:id="@+id/imgRiwayatOrder"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_monetization_on_white_24dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pencairan Saldo Lestari"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_marginBottom="5dp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cvDataItem"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="#00E676">

                    <ImageView
                        android:id="@+id/imgHapusMember"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_storage_white_24dp"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data item"
                        android:textSize="12sp"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:id="@+id/cvBarcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="6dp"
        app:cardCornerRadius="7dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="180dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/layoutScanQR"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_barcode_general"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan QR"
                    android:textStyle="bold"
                    android:textColor="@color/ColorGeneral"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:src="@color/colorTransparentGray"
                android:layout_margin="@dimen/padding_10"/>
            <LinearLayout
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_account_balance_wallet_general_24dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/saldo_bank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saldo Point"
                    android:textStyle="bold"
                    android:textColor="@color/ColorGeneral"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>