<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_profile">
        <LinearLayout
            android:background="@color/ColorGeneral"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:orientation="vertical"
            android:gravity="center">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgBankSampah"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@color/colorBorderWhite"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/tvNamaBankSampah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:hint="(Nama Bank Sampah)"
        android:textAllCaps="true"
        android:textColorHint="@color/colorWhite"
        android:textColor="@color/colorWhite"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvAlamatBankSampah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNamaBankSampah"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:hint="(Alamat Bank Sampah)"
        android:textColorHint="@color/colorWhite"
        android:textColor="@color/colorWhite"
        android:textSize="12sp"
        android:layout_marginBottom="20dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <TableRow
        android:id="@+id/trImgButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cvBarcode"
        android:layout_centerInParent="true">

                <LinearLayout
                    android:id="@+id/cvPencairanSaldo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="0.8">

                    <ImageView
                        android:id="@+id/imgRiwayatOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_pencairan_lestari"
                        android:layout_marginTop="13dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pencairan Saldo Lestari"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/ColorGeneral"
                        android:layout_marginBottom="5dp"/>
                </LinearLayout>

                <LinearLayout
        android:id="@+id/cvDataItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="0.8">

        <ImageView
            android:id="@+id/imgHapusMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_data_item"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data item"
            android:textSize="12sp"
            android:textColor="@color/ColorGeneral"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/cvBankInduk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="0.8">

            <ImageView
                android:id="@+id/imgbankInduk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_data_item"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bank Sampah Induk"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/ColorGeneral"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>
    </TableRow>
    <android.support.v7.widget.CardView
        android:id="@+id/cvBarcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="6dp"
        app:cardCornerRadius="7dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="180dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/layoutScanQR"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_barcode_general"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan QR"
                    android:textStyle="bold"
                    android:textColor="@color/ColorGeneral"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:src="@color/colorTransparentGray"
                android:layout_margin="@dimen/padding_10"/>
            <LinearLayout
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_account_balance_wallet_general_24dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/saldo_bank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saldo Point"
                    android:textStyle="bold"
                    android:textColor="@color/ColorGeneral"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
<LinearLayout
    android:layout_above="@+id/hsbanner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Konten Untuk Anda"
        android:textColor="@color/ColorGeneral"
        android:textStyle="bold"
        android:layout_margin="7dp"
        android:textSize="16dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="5dp"
        android:background="@color/ColorGeneral"/>
</LinearLayout>
    <HorizontalScrollView
        android:id="@+id/hsbanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:scrollbars="none">
        <LinearLayout
            android:id="@+id/casts_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" />

    </HorizontalScrollView>
</RelativeLayout>