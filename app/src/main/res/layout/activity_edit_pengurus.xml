<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/ParentDataPengurus"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBorderWhite">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linear_RegisterBankSampah"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tvIdPengurus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:text="Data Pengurus"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/relative_foto"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="15dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgRegisterPicture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/border_rectangle"/>

                    <ImageView
                        android:id="@+id/imgAdd"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_add_circle_16_dp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tvBankSampahPengurus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(nama bank sampah)"
                    android:gravity="center"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etNamaPengurus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:hint="Nama Pengurus"
                        android:screenReaderFocusable="true"
                        android:inputType="text"
                        android:textColor="@color/colorLogin"
                        android:textSize="15sp"
                        app:font="@font/sourcesansproregular" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etjabatanPengurus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:hint="Jabatan Pengurus"
                        android:inputType="text"
                        android:textColor="@color/colorLogin"
                        android:textSize="15sp"
                        app:font="@font/sourcesansproregular" />
                </android.support.design.widget.TextInputLayout>



                <Button
                    android:layout_gravity="center"
                    android:id="@+id/btEditPengurus"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/ic_btn_default"
                    android:text=" UPDATE "
                    android:textAllCaps="false"
                    android:textColor="@color/colorBorderWhite"
                    android:textSize="17sp" />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
