<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_10"
        app:cardElevation="6dp"
        app:cardCornerRadius="6dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_exit"
            android:layout_margin="5dp"
            android:id="@+id/arrowBack"
            android:layout_gravity="right"></ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="30dp">
            <TableRow
                android:id="@+id/trQRCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_barcode_general"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="QR CODE"
                        android:textColor="@color/ColorGeneral"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tampilkan QR Code untuk Pendaftaran anggota Bank Sampah Induk"
                    android:textStyle="bold"
                    android:textColor="@color/ColorGeneral"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/padding_10"/>
            </TableRow>
            <TableRow
                android:id="@+id/trPencarian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_search"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Search"
                        android:textColor="@color/ColorGeneral"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tampilkan Bank Sampah untuk Pendaftaran anggota Bank Sampah Induk"
                    android:textStyle="bold"
                    android:textColor="@color/ColorGeneral"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/padding_10"/>
            </TableRow>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
