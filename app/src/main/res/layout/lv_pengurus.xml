<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ParentPengurus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_10"
        app:cardCornerRadius="7dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/padding_10"
                android:layout_marginLeft="@dimen/padding_10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLength="15"
                    android:maxLines="1"
                    android:text="Nama Pengurus"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/cdBtnDetail"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLength="15"
                    android:maxLines="1"
                    android:text="Jabatan"
                    android:textSize="12sp" />
                <ImageView
                    android:id="@+id/btnHapusPengurus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_delete" />

            </TableRow>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/ColorGeneral"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_marginRight="@dimen/padding_10"/>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_marginRight="@dimen/padding_10">

                <TextView
                    android:id="@+id/tvNamaPengurus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Nama Pengurus"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:maxLength="15"/>

                <TextView
                    android:id="@+id/tvJabatan"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/cdBtnDetail"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Jabatan"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:maxLength="15"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/btnEditPengurus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_edit" />


            </TableRow>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>