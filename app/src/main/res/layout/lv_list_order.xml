            <ImageView
                android:id="@+id/imgGaris"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:srcCompat="@android:color/darker_gray" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tvTotal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center|start|left"
                    android:text="Total"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvTotalKg"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="(Total Kg)"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvTotalPoints"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|right|end"
                    android:text="(Total Points)"
                    android:textColor="@color/colorCardES"
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/imgViewDetail_List"
                    android:layout_width="0dp"
                    android:layout_height="14dp"
                    android:layout_weight="0.5"
                    android:src="@drawable/ic_pageview" />
            </TableRow>

            <TableRow
                android:id="@+id/tblLokasi_List"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvLokasi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lokasi"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvAlamat_List"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right|end"
                    android:text="(Alamat)"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tblFoto_List"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvFoto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Foto Limbah"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/imgArrowDown_List"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:src="@drawable/ic_arrow_drop_down" />

                <ImageView
                    android:id="@+id/imgArrowUp_List"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:src="@drawable/ic_arrow_drop_up_black_24dp"
                    android:visibility="gone" />
            </TableRow>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgViewSampah_List"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="right|end"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_navigation_profil"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/btnAccept_Order_List"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/TableRow_TotalPoints"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/ic_rounded_button"
                    android:gravity="center"
                    android:text="Selesaikan Orderan"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBtnFont"
                    android:textSize="12sp"
                    android:visibility="gone" />
                <Button
                    android:id="@+id/btnCancel_Order_List"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/TableRow_TotalPoints"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/ic_rounded_button"
                    android:gravity="center"
                    android:text="Batalkan Order"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBtnFont"
                    android:textSize="12sp"
                    android:visibility="gone" />


            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>