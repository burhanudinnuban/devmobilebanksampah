<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:contentPadding="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvOrderID_List"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"
                    android:gravity="center|start|left"
                    android:text="(Order ID)"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvStatusOrder_List"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/cdBtnDetail"
                    android:layout_weight="1"
                    android:gravity="center|right|end"
                    android:text="(Status Order)"
                    android:textSize="12sp" />

                <android.support.v7.widget.CardView
                    android:id="@+id/cdBtnDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp">

                    <Button
                        android:id="@+id/btnDetail_ListOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@color/colorDivider"
                        android:text="Detail"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBorderWhite"
                        android:textSize="13sp" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cdBtnHide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp">

                    <Button
                        android:id="@+id/btnHide_ListOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@color/colorDivider"
                        android:text="Hide"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBorderWhite"
                        android:textSize="13sp"
                        android:visibility="visible" />
                </android.support.v7.widget.CardView>
            </TableRow>

