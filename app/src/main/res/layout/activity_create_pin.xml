<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pin_content_layout"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="wrap_content"
    android:background="@null">

    <ImageView
        android:id="@+id/imgExit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_close_red2_24dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/pin_label_margin"
            android:gravity="center_horizontal"
            android:text="Create a New Pin"
            android:textColor="#000000"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_margin="15dp"/>

        <LinearLayout
            android:id="@+id/pin_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:background="@drawable/border_rectangle"/>

            <ImageView
                android:id="@+id/img2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:background="@drawable/border_rectangle"/>

            <ImageView
                android:id="@+id/img3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:background="@drawable/border_rectangle"/>

            <ImageView
                android:id="@+id/img4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:background="@drawable/border_rectangle"/>

            <ImageView
                android:id="@+id/img5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:background="@drawable/border_rectangle"/>

            <ImageView
                android:id="@+id/img6"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:background="@drawable/border_rectangle"/>

        </LinearLayout>

        <TextView
            android:id="@+id/etLupaPin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/pin_content_desc"
            android:gravity="center_horizontal"
            android:layout_margin="15dp"
            android:text="Lupa Pin Security?"
            android:textColor="#1976D2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNum1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:background="@drawable/border_rectangle"
                android:gravity="center"
                android:text="1"
                android:textSize="34dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNum2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:background="@drawable/border_rectangle"
                android:gravity="center"
                android:text="2"
                android:textSize="34dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNum3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:background="@drawable/border_rectangle"
                android:gravity="center"
                android:text="3"
                android:textSize="34dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNum4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:background="@drawable/border_rectangle"
                android:gravity="center"
                android:text="4"
                android:textSize="34dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNum5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:background="@drawable/border_rectangle"
                android:gravity="center"
                android:text="5"
                android:textSize="34dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNum6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:background="@drawable/border_rectangle"
                android:gravity="center"
                android:text="6"
                android:textSize="34dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNum7"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:background="@drawable/border_rectangle"
                android:gravity="center"
                android:text="7"
                android:textSize="34dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNum8"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:background="@drawable/border_rectangle"
                android:gravity="center"
                android:text="8"
                android:textSize="34dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNum9"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:background="@drawable/border_rectangle"
                android:gravity="center"
                android:text="9"
                android:textSize="34dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:background="@drawable/border_rectangle"
                android:gravity="center"
                android:text="0"
                android:textSize="34dp"
                android:textStyle="bold"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tvNum0"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:background="@drawable/border_rectangle"
                android:gravity="center"
                android:text="0"
                android:textSize="34dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDel"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:background="@drawable/ic_out"
                android:gravity="center"
                android:textSize="16dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>